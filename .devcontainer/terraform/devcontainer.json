{
  "name": "Terraform Development Container",
  "build": {
    "dockerfile": "../base/Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest",
      "tflint": "latest",
      "terragrunt": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "hashicorp.terraform"
      ]
    }
  },
  "remoteUser": "vscode"
}
